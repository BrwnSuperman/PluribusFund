<div class="navbar navbar-inverse navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
      <a class="brand" href="/">
        <strong>PLURIBUSFUND</strong>
      </a>
      <div class="nav-collapse collapse">
        <ul class="nav pull-right">
          <li><%= link_to('About', about_path) %></li>
          <li><a href="/campaigntest">Example Campaign</a></li>
          <li><a href="/raise">Raise Funds</a></li>
          <% if user_signed_in? %>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  My Account
                  <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <li><%= link_to('Account Dashboard', dashboard_path, :method => :post) %></li>
                  <li><%= link_to('Edit Account Details', edit_user_registration_path(@user), :method => :get) %></li>
                  <li><%= link_to('Sign Out', destroy_user_session_path, :method => :delete) %></li>
                </ul>
              </li>
          <% else %>
              <li><%= link_to('Sign Up', new_user_registration_path)  %></li>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  Sign In
                  <b class="caret"></b>
                </a>
                <div class="dropdown-menu" style="padding: 10px;">
                  <%= form_for("user", :url => user_session_path) do |f| %>
                      <div><%= f.email_field :email, :placeholder => "email address", :autofocus => true %></div>
                      <div><%= f.password_field :password, :placeholder => "password" %></div>
                      <div><%= f.submit "Sign in" %></div>
                  <% end %>
                </div>
              </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>